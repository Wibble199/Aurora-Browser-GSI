{
	"manifest_version": 2,
	"name": "Aurora GSI for Firefox",
	"short_name": "Aurora",
	"version": "0.1",
	"description": "This extension is an Inter-Process-Communication tool for Aurora. Aurora is a lighting software for RGB keyboards and mice which supports many different brands.",
	"homepage_url": "https://www.project-aurora.com/",
	"developer": {
		"name": "Will Bennion",
		"url": "https://gitlab.com/wibble199"
	},
	"incognito": "spanning",

	"icons": {
		"32": "icons/firefox/icon32.png",
		"48": "icons/firefox/icon48.png",
		"96": "icons/firefox/icon96.png"
	},
	"permissions": [
		"<all_urls>",
		"tabs",
		"storage",
		"downloads"
	],

	"options_ui": {
		"page": "options.html",
		"browser_style": true,
		"chrome_style": true
	},
	"applications": {
		"gecko": {
		  "id": "auroragsibrowser@project-aurora.com"
		}
	},

	"background": {
		"scripts": ["scripts/shared.js", "scripts/aurora-core.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/shared.js", "scripts/aurora-media-detector.js"]
		}
	]
}